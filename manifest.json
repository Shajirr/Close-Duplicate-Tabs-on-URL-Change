{
  "manifest_version": 2,
  "name": "Close duplicate tabs on URL change",
  "version": "2025.4.11",
  "description": "When a new tab is opened or updated, closes existing tabs with the same URL",
  "permissions": ["tabs", "storage", "contextMenus", "notifications"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
		"24": "icons/addon_logo.svg",
		"32": "icons/addon_logo.svg",
		"48": "icons/addon_logo.svg",
		"64": "icons/addon_logo.svg"
    },
    "default_title": "Close duplicate tabs on URL change"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  },
  "icons": {
	"24": "icons/addon_logo.svg",
    "32": "icons/addon_logo.svg",
	"48": "icons/addon_logo.svg",
	"64": "icons/addon_logo.svg"
  }
}

